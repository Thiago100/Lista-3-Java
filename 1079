import java.util.Scanner;

import java.io.*;

public class Main{
	public static void main(String[] args){
        PrintStream sa = System.out;
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        double a,b,c,v;
        for(int i=1;i<=n;i++){
            a = sc.nextDouble();b = sc.nextDouble();c = sc.nextDouble();
            v = (a*2+b*3+c*5)/10.0;
            sa.printf("%.1f\n",v);
        }

	}
}
